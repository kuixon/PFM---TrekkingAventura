<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_layout"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/excNameWid"
        android:fontFamily="sans-serif"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:text="Excursion Name"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorBackground">
        <TextView
            android:text="Lugar:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLocationWid"
            android:layout_weight="0.8"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:textColor="@color/cast_intro_overlay_background_color" />
        <TextView
            android:text="Contenido lugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/excLocationWid"
            android:layout_weight="0.2"
            android:textColor="@color/common_google_signin_btn_text_light_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/colorBackground">
        <TextView
            android:text="Distancia:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtDistanceWid"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_weight="0.25"
            android:textColor="@color/cast_intro_overlay_background_color" />
        <TextView
            android:text="Contenido Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:id="@+id/excDistanceWid"
            android:textColor="@color/common_google_signin_btn_text_light_default" />
        <TextView
            android:text="Nivel:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNivelWid"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_weight="0.25"
            android:textColor="@color/cast_intro_overlay_background_color" />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/excLevelWid"
            android:layout_weight="0.25"
            android:adjustViewBounds="true"
            android:cropToPadding="true" />
    </LinearLayout>

    <TextView
        android:text="Situación meteorológica actual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSituacionMetActWid"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackground">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:id="@+id/condIconWid"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>