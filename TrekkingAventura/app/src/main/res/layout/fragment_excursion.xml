<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/excImg"
                android:adjustViewBounds="true"
                android:cropToPadding="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/excName"
                android:fontFamily="sans-serif"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:text="Excursion Name"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingBottom="5dp">
                <TextView
                    android:text="Descripción/Opinión:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDescription"
                    android:layout_weight="0.6"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
                <TextView
                    android:text="Contenido descripción"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/excDescription"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingBottom="5dp">
                <TextView
                    android:text="Lugar:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLocation"
                    android:layout_weight="0.6"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
                <TextView
                    android:text="Contenido lugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/excLocation"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingBottom="5dp">
                <TextView
                    android:text="Distancia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtDistance"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_weight="0.25"/>
                <TextView
                    android:text="Contenido Distancia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:id="@+id/excDistance" />
                <TextView
                    android:text="Nivel:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtNivel"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_weight="0.25"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:id="@+id/excLevel"
                    android:layout_weight="0.25"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1"
                android:paddingBottom="5dp">
                <TextView
                    android:text="Latitud:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLatitude"
                    android:layout_weight="0.25"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
                <TextView
                    android:text="Contenido Latitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/excLatitude"
                    android:layout_weight="0.25" />
                <TextView
                    android:text="Longitud:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLongitude"
                    android:layout_weight="0.25"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
                <TextView
                    android:text="Contenido Longitud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/excLongitude"
                    android:layout_weight="0.25" />
            </LinearLayout>

            <TextView
                android:text="Situación meteorológica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingBottom="5dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>